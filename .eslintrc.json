{
    "parser": "babel-eslint",
    "root": true,
    "extends": [
        "airbnb",
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "comma-dangle": "off",
        "semi": [2, "always"],
        "indent": [2, 4],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-filename-extension": "off",
        "max-len": [
            "error",
            {
                "code": 120,
                "comments": 120,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true,
                "tabWidth": 4
            }
        ],
        "camelcase": 0,
        "quote-props": "off"
    }
}
